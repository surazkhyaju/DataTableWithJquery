@model DataTableCRUD.Models.Component
    @using DataTableCRUD.Helper
@using (Html.BeginForm("addData", "Component", FormMethod.Post, new { @class = "form-horizontal", id = "postDataForm" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.ModuleId, "Module", new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.DropDownListFor(m => m.ModuleId, ViewBag.Modules as SelectList, "Select Module", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ModuleId)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DeveloperId, "Developer", new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.DropDownListFor(m => m.DeveloperId, ViewBag.Developers as SelectList, "Select Developer name", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.DeveloperId)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.ComponentName, new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.TextBoxFor(u => u.ComponentName, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.ComponentName)
        </div>

    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.Status, new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.DropDownListFor(x => x.Status,DropdownHelper.ServiceTypeSelectList, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.Status)
        </div>

    </div>


    <div class="form-actions">
        <div class="row">
            <div class="col-md-offset-3 col-md-9">
                <button type="button" id="saveComponent" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
}

