
@{
    ViewBag.Title = "Index";
}
@section Scripts{
    <script type="text/javascript">
        $(function () {

            loadData();
            function loadData() {
                $.get("@Url.Action("getData")", function (resp) {
                    $("#list").html(resp)
                })
            }




            $("[data-action=addNew]").on("click", function (e) {
                $.get("@Url.Action("addData")", function (resp) {
                    $("#addUserBody").html(resp);
                    $("#addUser").modal('show');
                })
            });
            $(document).on("click", "#saveUser", function () {
                $.post("@Url.Action("addData")", { user: $('#postDataForm').serializeObject() }, function (resp) {

                    $('#addUser').modal('hide');
                    loadData();


                })
            })
            $(document).on("click", '[data-action=Edit]', function () {
                $.get('@Url.Action("editData")' + '?id=' + $(this).attr('data-id'), function (resp) {
                    $('#addUserBody').html(resp);
                    $('#addUser').modal('show');

                });
            });
            $(document).on("click", "#updateUser", function () {
                $.post("@Url.Action("editData")", { user: $('#postDataForm').serializeObject() }, function (resp) {

                    $('#addUser').modal('hide');
                    loadData();


                })
            });


            $(document).on("click", '[data-action=Delete]', function () {

                if (confirm("Are you sure you want to delete this")) {
                    $.post('@Url.Action("Delete")', { 'id': $(this).attr('data-id') }, function (resp) {
                        if (resp.Issuccess === true) {

                            loadData();
                        }

                        else {
                            alert("error");
                        }
                    });
                }
            });



        });

    </script>
}





<div id="list">

</div>
<button type="button" class="btn btn-primary btn-lg" data-action="addNew"> Add User </button>

<div id="addUser" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Add User</h4>
            </div>
            <div class="modal-body" id="addUserBody">
                <form method="post"></form>
            </div>
            <div class="modal-footer">

            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
