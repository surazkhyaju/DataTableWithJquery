@model DataTableCRUD.Models.User
@using DataTableCRUD.Helper;

@using (Html.BeginForm("addData", "User", FormMethod.Post, new { @class = "form-horizontal", id = "postDataForm" }))
{
    <div class="form-group">
        @Html.LabelFor(u => u.UserName, new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.TextBoxFor(u => u.UserName, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.UserName)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.Password, new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.TextBoxFor(u => u.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.Password)
        </div>

    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.UserType, new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.DropDownListFor(u => u.UserType, DropdownHelper.UserTypeSelectList, "Select UserType", new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.UserType)

        </div>
    </div>

    <div class="form-actions">
        <div class="row">
            <div class="col-md-offset-3 col-md-9">
                <button type="button" id="saveUser" class="btn btn-primary">Submit</button>

            </div>
        </div>
    </div>


}
