@model DataTableCRUD.Models.Service
@using (Html.BeginForm("editData", "Service", FormMethod.Post, new { @class = "form-horizontal", id = "postDataForm" }))
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ServiceId)
        <div class="form-group">
            @Html.LabelFor(u => u.ServiceName, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(u => u.ServiceName, new { @class = "form-control" })
                @Html.ValidationMessageFor(u => u.ServiceName)
            </div>
        </div>
       
        <div class="form-actions">
            <div class="row">
                <div class="col-md-offset-3 col-md-9">

                    <button type="button" id="updateService" class="btn btn-primary">Submit</button>

                </div>
            </div>

        </div>
    </div>

}
